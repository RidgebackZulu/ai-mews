---
layout: base.njk
title: Daily picks
---

<section class="hero">
  <h1 class="heroTitle">AI Mews</h1>
  <p class="heroTagline">{{ site.tagline }}</p>
</section>

<section class="list">
  {% for post in collections.posts %}
    <article class="listItem">
      <a class="listTitle" href="{{ post.url | url }}">{{ post.data.title }}</a>
      <div class="listMeta">
        <time datetime="{{ post.date | isoDate }}">{{ post.date.toDateString() }}</time>
        <span class="sep">Â·</span>
        <span class="dim">{{ (post.data.items or []) | length }} picks</span>
      </div>
      <p class="listDek">{{ post.data.dek }}</p>
    </article>
  {% endfor %}
</section>
